<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#FF3054F1"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="返回"
            android:textSize="18dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FF3054F1"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="RxJava2的简单使用(三)"
            android:textSize="18dp"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_delay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="delay()"/>

            <Button
                android:id="@+id/btn_doNext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="#0A39E5"
                android:padding="8dp"
                android:text="doNext()"/>

            <Button
                android:id="@+id/btn_doOnError"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="#E91E63"
                android:padding="8dp"
                android:text="doOnError()"/>

            <Button
                android:id="@+id/btn_doOnFinally"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="#9C27B0"
                android:padding="8dp"
                android:text="doOnFinally()"/>

            <Button
                android:id="@+id/btn_onErrorReturn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="#673AB7"
                android:padding="8dp"
                android:text="onErrorReturn()"/>

            <Button
                android:id="@+id/btn_onErrorResumeNext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="#3F51B5"
                android:padding="8dp"
                android:text="onErrorResumeNext()"/>

            <Button
                android:id="@+id/btn_onExceptionResumeNext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="#147ACA"
                android:padding="8dp"
                android:text="onExceptionResumeNext()"/>

            <Button
                android:id="@+id/btn_retry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="#4CAF50"
                android:padding="8dp"
                android:text="retry()"/>

            <Button
                android:id="@+id/btn_retryWhen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="#FFEB3B"
                android:padding="8dp"
                android:text="retryWhen()"/>

            <Button
                android:id="@+id/btn_repeat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="#FFC107"
                android:padding="8dp"
                android:text="repeat()"/>
            <Button
                android:id="@+id/btn_repeatWhen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="#FF9800"
                android:padding="8dp"
                android:text="repeatWhen()"/>


        </LinearLayout>
    </ScrollView>
</LinearLayout>
