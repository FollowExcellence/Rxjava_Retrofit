<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#FF3054F1"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="返回"
            android:textSize="18dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FF3054F1"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="RxJava2的简单使用(二)"
            android:textSize="18dp"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_map"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="map()"/>

            <Button
                android:id="@+id/btn_flatMap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="#0A39E5"
                android:padding="8dp"
                android:text="flatMap()"/>

            <Button
                android:id="@+id/btn_concatMap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="#E91E63"
                android:padding="8dp"
                android:text="concatMap()"/>

            <Button
                android:id="@+id/btn_buffer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="#9C27B0"
                android:padding="8dp"
                android:text="buffer()"/>

            <Button
                android:id="@+id/btn_concatAndConcatArray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="#673AB7"
                android:padding="8dp"
                android:text="concatAndConcatArray"/>

            <Button
                android:id="@+id/btn_merge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="#3F51B5"
                android:padding="8dp"
                android:text="merge()"/>

            <Button
                android:id="@+id/btn_concatDelayError"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="#147ACA"
                android:padding="8dp"
                android:text="concatDelayError()"/>

            <Button
                android:id="@+id/btn_mergeDelayError"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="#4CAF50"
                android:padding="8dp"
                android:text="mergeDelayError()"/>

            <Button
                android:id="@+id/btn_startWithAndStartWithArray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="#FFEB3B"
                android:padding="8dp"
                android:text="startWithAndStartWithArray"/>

            <Button
                android:id="@+id/btn_zip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="#FFC107"
                android:padding="8dp"
                android:text="zip()"/>

            <Button
                android:id="@+id/btn_combineLatest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="#FF9800"
                android:padding="8dp"
                android:text="combineLatest()"/>

            <Button
                android:id="@+id/btn_reduce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="#77574D"
                android:padding="8dp"
                android:text="reduce()"/>

            <Button
                android:id="@+id/btn_collect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="#A1543C"
                android:padding="8dp"
                android:text="collect()"/>

            <Button
                android:id="@+id/btn_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="#FA3E04"
                android:padding="8dp"
                android:text="count()"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
